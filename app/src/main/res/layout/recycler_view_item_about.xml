<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/light_margin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/recycler_view_item_about_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.TextView.Appearance.Title.Variant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycler_view_item_about_license_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.TextView.Appearance.Standard.Primary"
        app:layout_constraintBottom_toTopOf="@+id/recycler_view_item_about_author_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recycler_view_item_about_title_text_view" />

    <TextView
        android:id="@+id/recycler_view_item_about_author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.TextView.Appearance.Standard.Primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_item_about_title_text_view" />

    <TextView
        android:id="@+id/recycler_view_item_about_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/light_margin"
        style="@style/AppTheme.TextView.Appearance.Standard.Secondary.Italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_item_about_author_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>